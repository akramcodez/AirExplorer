<% layout("/layouts/boilerplate") %>

<div class="row justify-content-center mt-5 login">
  <h1 class="col-10 text-center text-success fw-bold">
    Login to AirExplorer
  </h1>
  <div class="col-9 p-5 rounded-3">
    <form action="/login" method="POST" class="needs-validation login-form" novalidate>
      <div class="mb-4">
        <label for="username" class="form-label text-secondary">Username</label>
        <input
          id="username"
          name="username"
          type="text"
          class="form-control form-control-lg login-inp"
          placeholder="Enter your username"
          required
        />
      </div>
      <div class="mb-4">
        <label for="password" class="form-label text-secondary">Password</label>
        <input
          id="password"
          name="password"
          type="password"
          class="form-control form-control-lg login-inp"
          placeholder="Enter your password"
          required
        />
      </div>
      <button
        class="btn btn-success btn-lg w-100"
        style="background-image: linear-gradient(90deg, #43cea2, #185a9d);"
      >
        Login
      </button>
    </form>

    <!-- Add the message here -->
    <div class="mt-4 text-center">
      <p class="text-secondary">
        Don't have an account? 
        <a href="/signup" class="text-success fw-bold">Sign Up</a>
      </p>
    </div>
  </div>
</div>
